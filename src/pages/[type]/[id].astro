---
import Layout from '../../layouts/Layout.astro';
import Wine from '../../components/Wine.astro';

const { type, id } = Astro.params;
const response = await fetch('https://api.sampleapis.com/wines/' + type + '/' + id);
const data = await response.json();
const wine: any = data;
---

<Layout title="Welcome to Astro.">
	<main>
		<div class="container-inner">
			<Wine 
				wine={wine.wine} 
				winery={wine.winery} 
				location={wine.location} 
				image={wine.image} 
				rating={wine.rating}
			/>
		</div>
	</main>
</Layout>